@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Flavor

<h4>Add a new flavor</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

  <input type="submit" value="Add new flavor">
}

<p>@Html.ActionLink("Back to flavor list", "Index")</p>